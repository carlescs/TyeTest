@page
@model IndexModel
@inject frontend.Services.WeatherService WeatherService
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th>
                    Date
                </th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in await WeatherService.GetForecast())
            {
                <tr>
                    <td>@forecast.Date</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
</div>